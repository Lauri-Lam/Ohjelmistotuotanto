<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MokkivarausApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MokkivarausApp">

    <TabBar>
        <Tab Title="Reservations">
            <ShellContent
                Title="Reservations"
                ContentTemplate="{DataTemplate local:ReservationPage}" />
        </Tab>

        <Tab Title="Calendar">
            <ShellContent
                Title="Calendar"
                ContentTemplate="{DataTemplate local:CalendarPage}" />
        </Tab>

        <Tab Title="Admin">
            <ShellContent
                Title="Cabins"
                ContentTemplate="{DataTemplate local:AdminCabinsPage}" />
        </Tab>
    </TabBar>

</Shell>
