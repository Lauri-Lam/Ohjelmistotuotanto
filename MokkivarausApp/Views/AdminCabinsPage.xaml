<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MokkivarausApp.AdminCabinsPage"
    Title="Cabins">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Button Text="Add Cabin"
                x:Name="AddButton"
                Clicked="OnAddCabinClicked" />

        <ListView x:Name="CabinList"
                  ItemSelected="OnCabinSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Mokkinimi}"
                              Detail="{Binding Katuosoite}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>

</ContentPage>
