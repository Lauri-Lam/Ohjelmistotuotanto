<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MokkivarausApp.CabinEditPage"
    Title="Edit Cabin">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Entry x:Name="NameEntry" Placeholder="Cabin name" />
            <Entry x:Name="StreetEntry" Placeholder="Street address" />
            <Entry x:Name="PostEntry" Placeholder="Postal code" />
            <Entry x:Name="AreaEntry" Placeholder="Area ID" Keyboard="Numeric" />
            <Entry x:Name="PriceEntry" Placeholder="Price" Keyboard="Numeric" />

            <Button Text="Save" Clicked="OnSaveClicked" />
            <Button Text="Delete" Clicked="OnDeleteClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
