<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MokkivarausApp.ReservationPage"
    Title="Reservations">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Button Text="New Reservation"
                x:Name="NewReservationButton"
                Clicked="OnNewReservationClicked" />

        <ListView x:Name="ReservationList"
                  ItemSelected="OnReservationSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding MokkiNimi}"
                              Detail="{Binding DateRangeText}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>

</ContentPage>
