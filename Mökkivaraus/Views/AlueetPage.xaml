<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="MokkivarausApp.Views.AlueetPage"
             Title="Alueet">
  <VerticalStackLayout Padding="10">
    <Entry Placeholder="Uusi alueen nimi"
           Text="{Binding UusiAlueNimi}" />
    <Button Text="Lisää alue" Command="{Binding AddCommand}" />

    <CollectionView ItemsSource="{Binding Alueet}">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <SwipeView>
            <SwipeView.RightItems>
              <SwipeItems>
                <SwipeItem Text="Poista"
                           BackgroundColor="Red"
                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:AlueetViewModel}}, Path=DeleteCommand}"
                           CommandParameter="{Binding .}" />
              </SwipeItems>
            </SwipeView.RightItems>

            <Grid Padding="10">
              <Label Text="{Binding Nimi}" VerticalOptions="Center" />
            </Grid>
          </SwipeView>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </VerticalStackLayout>
</ContentPage>
